			"image": "https://firstlayer.digital/logo.svg",
			"address": {
				"@type": "PostalAddress",
				"streetAddress": "4301 Mountain Road, Unit 202",
				"addressLocality": "Pasadena",
				"addressRegion": "MD",
				"postalCode": "21123-0202",
				"addressCountry": "US"
			},
			"email": "hello@firstlayer.digital",
			"areaServed": {
				"@type": "Country",
				"name": "United States"
			},
			"serviceType": [
				"Custom Software Development",
				"Operational Infrastructure",
				"Data Dashboards",
				"Private Cloud Solutions",
				"Web Development",
				"E-commerce Optimization"
			],
			"priceRange": "$$",
			"sameAs": [
				"https://www.instagram.com/firstlayerdigital/",
				"https://github.com/firstlayerdigital"
			]
		})} />
		
		<!-- Breadcrumb Schema -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "BreadcrumbList",
			"itemListElement": [{
				"@type": "ListItem",
				"position": 1,
				"name": "Home",
				"item": "https://firstlayer.digital"
			}]
		})} />
	</head>
	
	<body class="bg-[var(--bg-page)] font-sans text-[var(--text-body)] flex flex-col min-h-screen transition-colors duration-300 relative">
		
