---
interface Props {
	title: string;
	description: string;
	metrics: string[];
	link: string;
}

const { title, description, metrics, link } = Astro.props;
---

<div class="bg-white p-6 rounded-xl shadow-sm border border-slate-100 hover:shadow-md transition-shadow">
	<h3 class="text-xl font-bold text-slate-900 mb-2">{title}</h3>
	<p class="text-slate-600 mb-4 leading-relaxed">
		{description}
	</p>
	<ul class="text-sm text-slate-600 mb-4 space-y-1">
		{metrics.map((metric) => (
			<li>• {metric}</li>
		))}
	</ul>
	<a href={link} class="text-blue-600 font-semibold hover:text-blue-700 transition-colors">
		View Project →
	</a>
</div>

