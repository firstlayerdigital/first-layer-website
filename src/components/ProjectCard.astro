---
interface Props {
	title: string;
	description: string;
	metrics: string[];
	link: string;
}

const { title, description, metrics, link } = Astro.props;
---

<div class="group relative bg-[var(--bg-card)]/40 backdrop-blur-xl border border-[var(--stroke)] p-6 rounded-2xl shadow-lg transition-all duration-300 hover:-translate-y-2 hover:border-cyan-500/50 hover:shadow-[0_0_20px_rgba(6,182,212,0.15)]">
	<!-- Blueprint Pattern Background - Engineering Texture (ONLY on card) -->
	<div class="absolute inset-0 bg-[radial-gradient(#06b6d40d_1px,transparent_1px)] bg-[size:24px_24px] rounded-2xl"></div>
	<div class="absolute inset-0 bg-gradient-to-br from-cyan-50/0 to-cyan-50/50 dark:from-cyan-500/5 dark:to-cyan-500/10 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
	<div class="relative z-10">
		<h3 class="text-xl font-bold text-slate-950 dark:text-white mb-2 group-hover:text-cyan-700 dark:group-hover:text-cyan-400 transition-colors">{title}</h3>
		<p class="text-[var(--text-body)] dark:text-slate-400 mb-4 leading-relaxed transition-colors duration-300">
			{description}
		</p>
		<ul class="text-sm text-[var(--text-body)] dark:text-slate-400 mb-4 space-y-1 transition-colors duration-300">
			{metrics.map((metric) => (
				<li class="flex items-center gap-2">
					<span class="w-1.5 h-1.5 bg-cyan-500 rounded-full"></span>
					{metric}
				</li>
			))}
		</ul>
		<a href={link} class="inline-flex items-center gap-2 text-cyan-600 font-semibold hover:text-cyan-700 hover:gap-3 transition-all group-hover:underline">
			View Project 
			<span class="inline-block group-hover:translate-x-1 transition-transform">â†’</span>
		</a>
	</div>
</div>

