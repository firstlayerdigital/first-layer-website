---
import Layout from '../layouts/Layout.astro';

// Make this page static so Netlify can detect the form at build time
export const prerender = true;
---

<Layout 
	title="Contact Us | Get Started with FirstLayer Digital | Pasadena, Maryland"
	description="Contact FirstLayer Digital for custom software development, operational infrastructure, data dashboards, and private cloud solutions. Schedule a consultation in Pasadena, Maryland."
>
	<main class="relative overflow-hidden bg-[var(--bg-page)] bg-[radial-gradient(#06b6d412_1px,transparent_1px)] bg-[size:24px_24px]" role="main">
		<div class="max-w-2xl 2xl:max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12 sm:py-16 md:py-20">
			<!-- Floating decorative elements -->
			<div class="absolute -left-20 top-32 hidden xl:block 2xl:left-0 w-40 h-40 2xl:w-48 2xl:h-48 bg-gradient-to-br from-cyan-500/15 to-transparent rounded-3xl blur-xl rotate-12"></div>
			<div class="absolute -right-20 top-48 hidden xl:block 2xl:right-0 w-36 h-36 2xl:w-44 2xl:h-44 bg-gradient-to-br from-blue-500/15 to-transparent rounded-2xl blur-xl -rotate-12"></div>

			<div class="relative text-center mb-10 sm:mb-12 md:mb-16">
				<h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-5xl 2xl:text-6xl font-extrabold text-slate-950 dark:text-white dark:font-bold mb-4 sm:mb-6 leading-tight transition-colors duration-300">
					Let's Work <span class="text-cyan-600 relative">
						<span class="relative z-10">Together</span>
						<span class="absolute inset-0 bg-gradient-to-r from-[var(--accent-cyan)]/8 to-[var(--accent-cyan)]/8 blur-lg -z-0"></span>
					</span>
				</h1>
				<p class="text-base sm:text-lg md:text-lg lg:text-xl 2xl:text-xl text-[var(--text-body)] dark:text-slate-400 max-w-xl mx-auto leading-relaxed px-2 transition-colors duration-300">
					Tell us about your project. We'll get back to you within 24 hours.
				</p>
			</div>

			<form 
				name="contact" 
				method="POST" 
				data-netlify="true"
				netlify-honeypot="bot-field"
				action="/success"
				data-netlify-redirect="/success"
				class="relative bg-[var(--bg-card)]/40 backdrop-blur-xl border border-[var(--stroke)] rounded-2xl sm:rounded-3xl shadow-xl p-6 sm:p-8 md:p-10 lg:p-12 overflow-hidden"
			>
				<div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px] opacity-30"></div>
				
				<!-- Hidden fields for Netlify -->
				<input type="hidden" name="form-name" value="contact" />
				<input type="hidden" name="_to" value="/success" />
				<p class="hidden">
					<label>
						Don't fill this out if you're human: <input name="bot-field" />
					</label>
				</p>

				<!-- Name Field -->
				<div class="mb-6 sm:mb-7 md:mb-8">
					<label for="name" class="block text-sm sm:text-base md:text-lg font-semibold text-[var(--text-header)] mb-2.5 sm:mb-3 flex items-center gap-2 transition-colors duration-300">
						<svg class="w-5 h-5 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
						</svg>
						<span>Name</span>
					</label>
					<input 
						type="text" 
						id="name" 
						name="name" 
						required
						placeholder="Your full name"
						class="w-full px-4 sm:px-5 py-3.5 sm:py-4 rounded-xl border border-[var(--stroke)] focus:border-cyan-500 focus:ring-4 focus:ring-cyan-500/10 outline-none transition-all text-base sm:text-lg bg-[var(--bg-page)] text-[var(--text-header)] placeholder:text-[var(--text-body)] min-h-[48px] sm:min-h-[52px] touch-manipulation"
					/>
				</div>

				<!-- Email Field -->
				<div class="mb-6 sm:mb-7 md:mb-8">
					<label for="email" class="block text-sm sm:text-base md:text-lg font-semibold text-[var(--text-header)] mb-2.5 sm:mb-3 flex items-center gap-2 transition-colors duration-300">
						<svg class="w-5 h-5 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
						</svg>
						<span>Email</span>
					</label>
					<input 
						type="email" 
						id="email" 
						name="email" 
						required
						placeholder="your.email@example.com"
						class="w-full px-4 sm:px-5 py-3.5 sm:py-4 rounded-xl border border-[var(--stroke)] focus:border-cyan-500 focus:ring-4 focus:ring-cyan-500/10 outline-none transition-all text-base sm:text-lg bg-[var(--bg-page)] text-[var(--text-header)] placeholder:text-[var(--text-body)] min-h-[48px] sm:min-h-[52px] touch-manipulation"
					/>
				</div>

				<!-- Message Field -->
				<div class="mb-8 sm:mb-10 md:mb-12">
					<label for="message" class="block text-sm sm:text-base md:text-lg font-semibold text-[var(--text-header)] mb-2.5 sm:mb-3 flex items-center gap-2 transition-colors duration-300">
						<svg class="w-5 h-5 text-cyan-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
						</svg>
						<span>Project Details</span>
					</label>
					<textarea 
						id="message" 
						name="message" 
						rows="6" 
						required
						placeholder="Tell us about your project, goals, timeline, and any specific requirements..."
						class="w-full px-4 sm:px-5 py-3.5 sm:py-4 rounded-xl border border-[var(--stroke)] focus:border-cyan-500 focus:ring-4 focus:ring-cyan-500/10 outline-none transition-all text-base sm:text-lg resize-y bg-[var(--bg-page)] text-[var(--text-header)] placeholder:text-[var(--text-body)] min-h-[140px] sm:min-h-[160px] touch-manipulation leading-relaxed"
					></textarea>
				</div>

				<!-- Submit Button -->
				<button 
					type="submit" 
					class="group relative w-full bg-gradient-to-r from-[var(--button-bg)] via-[var(--button-bg)] to-[var(--button-bg)] text-[var(--button-text)] font-bold py-4 sm:py-4.5 md:py-5 rounded-xl text-base sm:text-lg hover:from-cyan-700 hover:via-cyan-600 hover:to-cyan-700 active:from-cyan-800 active:via-cyan-700 active:to-cyan-800 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-0.5 active:translate-y-0 touch-manipulation min-h-[52px] sm:min-h-[56px] overflow-hidden"
				>
					<span class="relative z-10 flex items-center justify-center gap-2">
						<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
						</svg>
						Send Message
					</span>
					<div class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/20 to-white/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-1000"></div>
				</button>

				<!-- Decorative corner elements -->
				<div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-cyan-400/10 to-transparent rounded-bl-full -z-10"></div>
				<div class="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-tr from-blue-400/10 to-transparent rounded-tr-full -z-10"></div>
			</form>
		</div>
	</main>
</Layout>