---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found | FirstLayer Digital">
	<div class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4">
		<h1 class="text-9xl font-extrabold text-[var(--text-header)] mb-4">404</h1>
		<h2 class="text-3xl font-bold text-[var(--text-header)] mb-4">Page Not Found</h2>
		<p class="text-[var(--text-body)] mb-8 max-w-md">
			Oops! The page you are looking for doesn't exist. It might have been moved or deleted.
		</p>
		<a href="/" class="bg-blue-600 text-white px-8 py-3 rounded-lg font-bold hover:bg-blue-700 transition-colors">
			Go Back Home
		</a>
	</div>
</Layout>